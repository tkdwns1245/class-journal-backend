{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node" : true,
        "es6" : true
    },
    "extends": ["eslint:recommended", "prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType" : "module"
    },
    "rules": {
        "no-unused-vars": "warn",
        "no-console": "off"
    },
    "globals" : {
        "Atomics" : "readonly",
        "SharedArrayBuffer" : "readonly"
    }
}
